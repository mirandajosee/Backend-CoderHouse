<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<img src="/mirai.png" alt="Logo de Mirai Ecommerce" width="10%" height="10%"/>
<body class="container" style="background-color:rgb(170, 142, 228);color:honeydew">
    <h1>Ingresa tu nueva contraseña para {{user.email}}</h1>
    <form  action="/api/users/updatePassword?uid={{user._id}}" method="post" class="form-group w-50">       
        <label class="form-label">Nueva contraseña</label>
        <input type="password" name="password" class="form-control" required="required" id="password" oninput="check()">
        <label for="password_confirm">Vuelve a ingresarla:</label>
        <input name="password_confirm" required="required" type="password" id="password_confirm" oninput="check()"/>
        <input type="submit" >
    </form>
</body>

<script>
    function check() {
    var input = document.getElementById('password_confirm');
    if (input.value != document.getElementById('password').value) {
        input.setCustomValidity('Password Must be Matching.');
    } else {
        input.setCustomValidity('');
    }
}
</script>